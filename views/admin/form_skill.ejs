<div class="form-group mb-4">
    <label for="name">
        Name
    </label>
    <input required class="form-control" type="text" name="name" id="name" value="<%= modelObject.name %>">
</div>

<div class="form-group mb-4">
    <label for="logo">
        Logo
    </label>
    <input required class="form-control" type="text" name="logo" id="logo" value="<%= modelObject.logo %>"
        oninput="updatePreviewImage(this)">
    <small class="form-text text-muted">
        URL to an image representative of the skill; try to use .svg type for scaling
    </small>
</div>

<div class="form-group mb-4">
    <label for="type">
        Type
    </label>
    <input required class="form-control" type="text" name="type" id="type" value="<%= modelObject.type %>">
    <small class="form-text text-muted">
        eg. Programming, Game Engine, Office Tool
    </small>
</div>

<div class="form-group mb-4">
    <label for="proficiency">
        Proficiency
    </label>
    <input required class="form-control" type="number" name="proficiency" id="proficiency"
        value="<%= modelObject.proficiency %>" min="1" max="5">
    <small class="form-text text-muted">
        1 to 5 star rating for how good you are at it
    </small>
</div>

<div class="form-group mb-4">
    <label for="list_order">
        Listing order
    </label>
    <input required class="form-control" type="number" name="list_order" id="list_order"
        value="<%= modelObject.list_order %>">
    <small class="form-text text-muted">
        The ordering for this skill in a list of all other skills
    </small>
</div>



<div class="card m-auto" style="width: 104px;">
    <img id="preview" class="card-img-top skill-card-img mb-4" src="<%= modelObject.logo %>" style="height: 4rem;">
    <div class="card-body p-0">
        <div class="progress">
            <div class="progress-bar" style="width: 80%" role="progressbar" aria-valuenow="4" aria-valuemin="0"
                aria-valuemax="5"></div>
        </div>
    </div>
</div>

<script>
    function updatePreviewImage(inputElement) {
        document.getElementById('preview').setAttribute('src', inputElement.value);
    }
</script>