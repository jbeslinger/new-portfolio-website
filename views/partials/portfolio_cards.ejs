<!-- Todo: pull out inline css.-->
<% portfolio.forEach(project=> { %>
    <div class="card col-sm-6 col-md-4 col-lg-2 ms-1 mt-1 mb-1 "
        style="margin: auto;height: 352px;background-color: magenta;background-size: cover;background-position-x: 50%;border: 4px solid #d3d3d3;border-radius: 4px;box-sizing: border-box;overflow: hidden;background-image: url(<%= project.cover_image %>)">
        <span class=="buttons">
            <% if (project.dl_link !="" ) { %>
                <a href="<%= project.dl_link %>" target="_blank">
                    <svg id="download" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="#fff"
                        class="bi bi-download" viewBox="0 0 16 16"
                        style="float: right;width: 20px;padding-left: 4px;padding-right: 4px;filter: drop-shadow( 3px 3px 2px rgba(0, 0, 0, .7))">
                        <path
                            d="M.5 9.9a.5.5 0 0 1 .5.5v2.5a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1v-2.5a.5.5 0 0 1 1 0v2.5a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2v-2.5a.5.5 0 0 1 .5-.5z" />
                        <path
                            d="M7.646 11.854a.5.5 0 0 0 .708 0l3-3a.5.5 0 0 0-.708-.708L8.5 10.293V1.5a.5.5 0 0 0-1 0v8.793L5.354 8.146a.5.5 0 1 0-.708.708l3 3z" />
                    </svg>
                </a>
                <% } %>
                    <% if (project.src_code !="" ) { %>
                        <a href="<%= project.src_code %>" target="_blank">
                            <svg id="source" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="#fff"
                                class="bi bi-code-slash" viewBox="0 0 16 16"
                                style="float: right;width: 20px;padding-left: 4px;padding-right: 4px;filter: drop-shadow( 3px 3px 2px rgba(0, 0, 0, .7))">
                                <path
                                    d="M10.478 1.647a.5.5 0 1 0-.956-.294l-4 13a.5.5 0 0 0 .956.294l4-13zM4.854 4.146a.5.5 0 0 1 0 .708L1.707 8l3.147 3.146a.5.5 0 0 1-.708.708l-3.5-3.5a.5.5 0 0 1 0-.708l3.5-3.5a.5.5 0 0 1 .708 0zm6.292 0a.5.5 0 0 0 0 .708L14.293 8l-3.147 3.146a.5.5 0 0 0 .708.708l3.5-3.5a.5.5 0 0 0 0-.708l-3.5-3.5a.5.5 0 0 0-.708 0z" />
                            </svg>
                        </a>
                        <% } %>
        </span>
        <span class="label fixed-bottom position-absolute"
            style="background-color: #00000080;width: 100%;height: 128px;transition: all 0.1s ease-in;color: white;box-sizing: border-box;padding: 8px;font-family: 'DroidSans';font-size: 1em;line-height: 1.6;">
            <i>
                <%= project.title %>
            </i>
            <br>
            <%= project.description %>, <%= project.year %></br>
                    <tt>
                        <%= project.skills_used %>
                    </tt>
        </span>
    </div>
    <% }) %>