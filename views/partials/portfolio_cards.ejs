<!-- Todo: pull out inline css.-->
<% portfolio.forEach(project => { %>
    <div class="card col-sm-6 col-md-4 col-lg-2 ms-1 " style="margin: auto;height: 352px;background-color: magenta;background-size: cover;background-position-x: 50%;border: 4px solid #d3d3d3;border-radius: 4px;box-sizing: border-box;overflow: hidden;background-image: url(<%= project.cover_image %>)">
        <span class=="buttons" >
            <a href="#play">
                <img class="hide_on_mobile" src="img/play.svg" style="float: right;width: 20px;padding-left: 4px;padding-right: 4px;filter: drop-shadow( 3px 3px 2px rgba(0, 0, 0, .7));">
            </a>
            <a href="<%= project.dl_link %>">
                <img class="hide_on_mobile" src="img/download.svg" style="float: right;width: 20px;padding-left: 4px;padding-right: 4px;filter: drop-shadow( 3px 3px 2px rgba(0, 0, 0, .7));">
            </a>
            <a href="<%= project.src_code %>">
                <img class="hide_on_mobile" src="img/code.svg" style="float: right;width: 20px;padding-left: 4px;padding-right: 4px;filter: drop-shadow( 3px 3px 2px rgba(0, 0, 0, .7));">
            </a>
        </span>
        <span class="label fixed-bottom position-absolute" style="background-color: #00000080;width: 100%;height: 128px;transition: all 0.1s ease-in;color: white;box-sizing: border-box;padding: 8px;font-family: 'DroidSans';font-size: 1em;line-height: 1.6;">
            <i><%= project.title %></i>
            <br><%= project.description %>, <%= project.year %></br>
            <tt><%= project.skills_used %></tt>
        </span>
    </div>
<% }) %>
